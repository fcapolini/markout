{
  "name": "@markout-js/cli",
  "version": "0.1.3",
  "description": "HTML-First Reactive Web Framework - CLI and Development Server",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "node scripts/build-server.mjs && node scripts/build-client.mjs",
    "dev": "nodemon --exec ts-node src/index.ts -- serve ./www --client-bin ./dist/client.js",
    "start": "node dist/index.js",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "reload": "pm2 reload ecosystem.config.js",
    "delete": "pm2 delete ecosystem.config.js",
    "logs": "pm2 logs",
    "monit": "pm2 monit",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test:watch": "vitest --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "precommit": "npm run format:check && npm test",
    "prepare": "husky"
  },
  "keywords": [
    "web-framework",
    "reactive",
    "html-first",
    "typescript",
    "server-side-rendering",
    "client-side-hydration",
    "component-framework",
    "alpha"
  ],
  "author": "fcapolini",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcapolini/markout.git"
  },
  "homepage": "https://github.com/fcapolini/markout#readme",
  "bugs": {
    "url": "https://github.com/fcapolini/markout/issues"
  },
  "bin": {
    "markout": "./dist/index.js"
  },
  "files": [
    "dist/index.js",
    "dist/client.js",
    "dist/src/",
    "README.md",
    "LICENSE",
    "ROADMAP.md",
    "INSTALL.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/compression": "1.8.1",
    "commander": "14.0.1",
    "compression": "1.8.1",
    "escodegen": "2.1.0",
    "estraverse": "5.3.0",
    "express": "5.1.0",
    "express-rate-limit": "8.1.0",
    "pm2": "6.0.13"
  },
  "devDependencies": {
    "@types/escodegen": "0.0.10",
    "@types/estraverse": "5.1.7",
    "@types/express": "5.0.3",
    "@types/jsdom": "27.0.0",
    "@types/node": "24.7.2",
    "@types/supertest": "6.0.3",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "0.25.11",
    "happy-dom": "20.0.2",
    "husky": "9.1.7",
    "jsdom": "27.0.0",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
